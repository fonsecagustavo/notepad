    <div class="container w-50 ">

    
        <h1>Note</h1>

        <form class="d-flex  flex-column " action="/edit/<%= body.id %>" method="POST">
            <input class="field mb-2 p-2" name="title" placeholder="Title" value="<%= body.title %>" >
            <textarea name="note" id="note" cols="30" rows="10" style="resize: none" ><%= body.note %></textarea>
            <button class="btn btn-primary mt-3">Add</button>
        </form>
